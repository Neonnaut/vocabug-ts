
{
    "files": ["src/index.ts"],
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        //"noUncheckedIndexedAccess": true,
        "strict": true,
        "declaration": true,
        "noEmitOnError": true,
        "outDir": "./dist/",
        "module": "commonjs",
        "emitDeclarationOnly": true,

        "exactOptionalPropertyTypes": true,
        "removeComments": true,
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "newLine": "lf"
    }
}